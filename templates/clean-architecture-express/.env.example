# Application Configuration
NODE_ENV=production
PORT=3000
PROJECT_NAME=clean-arch-app

# Database Configuration
# Uncomment and configure based on your chosen database
# DATABASE_URL=your-database-connection-string

# MongoDB Example
# DATABASE_URL=mongodb://admin:password@mongodb:27017/myapp?authSource=admin

# PostgreSQL Example
# DATABASE_URL=postgresql://postgres:password@postgres:5432/myapp

# MySQL Example
# DATABASE_URL=mysql://user:password@mysql:3306/myapp

# Database Credentials (if using docker-compose database services)
# DB_USERNAME=admin
# DB_PASSWORD=password
# DB_NAME=myapp
# DB_ROOT_PASSWORD=rootpassword

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis Configuration (optional - for caching)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# API Configuration
# API_PREFIX=/api
# API_VERSION=v1

# CORS Configuration
# CORS_ORIGIN=http://localhost:3000
# CORS_CREDENTIALS=true
